function sshlog() {
        LOGDIR=~/sshlogs
        mkdir -p $LOGDIR
        date=$(date '+%y-%m-%d-%H%M%S')
        filename="${LOGDIR}/${1}_${date}.log"
        ssh $1 2>&1 | tee -ai $filename
        echo "ssh session saved in ${filename}"
}

function port-listen() {
        sudo lsof -i -P -n | grep LISTEN
}

function lesslt() {
        ls -1t "$1" | head -n 1 | xargs -I {} less -R "$1/{}"
}

function lesslt-col() {
        ls -1t "$1" | grep colored | head -n 1 | xargs -I {} less -R "$1/{}"
}

